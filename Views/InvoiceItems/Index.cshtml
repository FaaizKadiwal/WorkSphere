@model IEnumerable<EmployeeManagementSystem.Models.InvoiceItem>

@{
    ViewData["Title"] = "Invoice Items";
}

<h1>Invoice Items</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">Create New</a>
</p>

<!-- 🔍 Search & Filter -->
<form method="get" asp-action="Index" class="form-inline mb-3">
    <div class="input-group">
        <!-- Search -->
        <input type="text" name="searchString" value="@Context.Request.Query["searchString"]"
               class="form-control" placeholder="Search Item..." />

        <!-- Filter -->
        <select name="invoiceId" class="form-control" asp-items="ViewBag.Invoices">
            <option value="">-- Filter by Invoice --</option>
        </select>

        <!-- Search button with icon -->
        <button type="submit" class="btn btn-outline-secondary" title="Search">
            <i class="bi bi-search"></i>
        </button>

        <!-- Reset button with icon -->
        <a asp-action="Index" class="btn btn-outline-dark" title="Reset">
            <i class="bi bi-arrow-counterclockwise"></i>
        </a>
    </div>
</form>

<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>@Html.DisplayNameFor(model => model.Invoice)</th>
            <th>@Html.DisplayNameFor(model => model.Description)</th>
            <th>@Html.DisplayNameFor(model => model.Quantity)</th>
            <th>@Html.DisplayNameFor(model => model.UnitPrice)</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@(item.Invoice?.InvoiceNumber ?? "—")</td>
                <td>@item.Description</td>
                <td>@item.Quantity</td>
                <td>@item.UnitPrice</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

